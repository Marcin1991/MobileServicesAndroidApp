<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UsuÅ„ produkt"
        android:id="@+id/btnDelete"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:id="@+id/btnSave"
        android:layout_above="@+id/btnDelete"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/npAmount"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnSave" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.00000"
        android:id="@+id/textLon"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/npAmount"
        android:layout_toEndOf="@+id/btnSave" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.00000"
        android:id="@+id/textLat"
        android:layout_alignBaseline="@+id/textLon"
        android:layout_alignBottom="@+id/textLon"
        android:layout_toStartOf="@+id/npAmount" />

</RelativeLayout>